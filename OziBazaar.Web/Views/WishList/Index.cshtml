@model IEnumerable<OziBazaar.Web.Models.WishListViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Wish list</h2>

<table class="table table-striped table-bordered table-condensed">
    <tr>
        <th>
            Group
        </th>
        <th>
            Product
        </th>
        <th>
            Price
        </th>
        <th>
           &nbsp;
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                
                @Html.DisplayFor(modelItem => item.ProductGroupDescription)
            </td>
            <td>
                @Html.ActionLink(item.ProductDescription, "ViewProduct", "Product", new { adId = item.AdvertisementId }, null)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>               
                @Html.ActionLink("Remove", "Remove", "WishList", new { adId = item.AdvertisementId }, null)
            </td>
        </tr>
    }

</table>
<div>
    @Html.ActionLink("Clear", "Clear", "WishList")
</div>
