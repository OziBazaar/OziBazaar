@model IEnumerable<OziBazaar.Web.Models.Ad>

@{
    ViewBag.Title = "Ad List";
}

<h2>All Ad List</h2>

<p>
    @Html.ActionLink("Create New", "AddAd","Ad")
</p>
<table class="table table-striped table-bordered table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.ActionLink("View", "ViewProduct", "Product", new { productId = item.ProductId }, null)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditProduct", "Product", new {advertisementId=item.Id , productId = item.ProductId,categoryId=item.CategoryId }, null)
            </td>
        </tr>
    }

</table>
