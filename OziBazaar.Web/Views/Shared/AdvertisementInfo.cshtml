@model OziBazaar.Web.ViewModel.AdvertisementViewModel

<div class="form-horizontal">
    <h4>
        <b>@Model.Title</b>
    </h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ProductGroupId)
        @Html.HiddenFor(model => model.CategoryId)
        @Html.HiddenFor(model => model.AdvertisementId)
      
        <div class="form-group">
        <strong>
            @Html.LabelFor(model => model.StartDate, new { @class = "control-label col-md-2" })
        </strong>
        <div class="col-md-8">
            @Html.TextBoxFor(model => model.StartDate, new { @Value = Model.StartDate.Value.ToString(" dd/MM/yyyy"), @class = "datepicker" })
            @Html.ValidationMessageFor(model => model.StartDate)
        </div>
    </div>

        <div class="form-group">
            <strong>
                @Html.LabelFor(model => model.FinishDate, new { @class = "control-label col-md-2" })
            </strong>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.FinishDate, new { @Value = Model.FinishDate.Value.ToString("dd/MM/yyyy"), @class = "datepicker" })
                @Html.ValidationMessageFor(model => model.FinishDate)
            </div>
        </div>

        <div class="form-group">
            <strong>
                @Html.LabelFor(model => model.Title, new { @class = "control-label col-md-2" })
            </strong>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title)
            </div>
        </div>

        <div class="form-group">
            <strong>
                @Html.LabelFor(model => model.Price, new { @class = "control-label col-md-2 " })
            </strong>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Price)
                @Html.ValidationMessageFor(model => model.Price)
            </div>
        </div>    
    </div>
@section scripts
{
    <script type="text/javascript" language="javascript">
    $(function () {

        $('#StartDate').datepicker({ dateFormat: "dd/mm/yy" });
        $("#FinishDate").datepicker({ dateFormat: "dd/mm/yy" });
    });
    </script>
}