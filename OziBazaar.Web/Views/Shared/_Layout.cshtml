<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - OziBazaar online Sale</title>
    <link href="~/Content/bootstrap/css/bootstrap.css" rel="stylesheet" />
     @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/modernizr")
   
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="row">
                <div class="span8">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Ozi Bazaar", "Index", "Home", null, new { @class = "navbar-brand" })</li>
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        <li>@Html.ActionLink("Advertisements", "AdList", "Ad")</li>
                        <li>@Html.ActionLink("Wish List", "Index", "WishList")</li>
                        <li>@Html.ActionLink("Product Categories", "ProductCategories", "Ad")</li>
                        @if(User.Identity.IsAuthenticated)
                        { 
                            <li>@Html.ActionLink("My Adds", "MyAdList", "Ad")</li>
                        }
                    </ul>
                </div>
                <div class="span4">

                    @Html.Partial("_LoginPartial")

                </div>
            </div>

        </div>
        </div>
    <div class="container body-content" id="body-content">
        @RenderBody()

    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - Ozi Bazaar framework</p>
    </footer>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryui")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)

</body>
</html>
