@model OziBazaar.DAL.Models.UserProductsViewModel

@{
    ViewBag.Title = "GetUserAdvertisementList";
    Layout = "~/Areas/UserManagement/Views/Shared/_UserDashboardLayout.cshtml";
}

<h2>Advertisements defined by user</h2>

@if (Model.UserProductViewModelList != null && Model.UserProductViewModelList.Count != 0) {
    <div class="container-fluid">
        @foreach (OziBazaar.DAL.Models.UserProductViewModel productViewModel in Model.UserProductViewModelList) {
            <div class="row-fluid">
                <div class="box">
                    <div class="well">
                        <div class="media">
                            <a class="pull-left" href="#">
                                <img class="media-object" src="@Url.Content(productViewModel.ImagePath)" style="height:100px;width:200px">
                            </a>
                        </div>
                        <div class="media-body">
                            <h2 class="media-heading"><span style="padding-left:20px">@productViewModel.Description</span></h2>
                            <div class="media">
                                <p><span style="padding-left:20px">Price : @productViewModel.Price.ToString("C")</span></p>
                                <p><span style="padding-left:20px">Start Date: @productViewModel.StartDate.ToString("d")</span></p>
                                <p><span style="padding-left:20px">End Date: @productViewModel.EndDate.ToString("d")</span></p>
                            </div>
                        </div>
                    </div>
                </div>
           </div>
        }
        <div>
            @Html.PageLinks(Model.PagingInfo, x => Url.Action("GetUserAdvertisementList", new { page = x }))
        </div>
    </div>
}
else {
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="hero-unit">
                <h2>There are not items to be displayed</h2>
        </div>
    </div>
</div>
}
